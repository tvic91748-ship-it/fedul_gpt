import asyncio
from aiogram import Bot, Dispatcher
from aiogram.types import Message
from aiogram.filters import CommandStart, Command

API_BOT = '8292293542:AAELd1xl3aVSnXNkZE03D-jBY0VSyVIQ1B0'

bot = Bot(API_BOT)
dp = Dispatcher()  

@dp.message(CommandStart())
async def cmd_start(message: Message):
    await message.answer(
        "üëã–ø—Ä–∏–≤–µ—Çüëã —è –ø—Ä–æ—Å—Ç–∞—è –Ω–µ–π—Ä–æ—Å–µ—Ç—å —è –±—ã–ª–∞ —Å–æ–∑–¥–∞–Ω–∞ 6 –¥–µ–∫–∞–±—Ä—è 2025\n\n"
        "–Ø–∑—ã–∫ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è python\n\n"
        "üí∏ –ø–æ–¥–¥–µ—Ä–∂–∞—Ç—å –ø—Ä–æ–µ–∫—Ç —Å—Å—ã–ª–∫–∞ (https://dalink.to/meme_studio) üí∏\n\n"
        "üì± —Ä–µ–∫–ª–∞–º–∞ üì± @fedul_help_bot"
    )

@dp.message(Command('help'))
async def cmd_help(message: Message):
    await message.answer("–Ω–∞–ø–∏—à–∏—Ç–µ –≤ –ø–æ–¥–¥–µ—Ä–∂–∫—É @fedul_help_bot –µ—Å–ª–∏ –Ω–∞—à–ª–∏ –æ—à–∏–±–∫—É –∏–ª–∏ —Ö–æ—Ç–∏—Ç–µ –¥–æ–±–∞–≤–∏—Ç—å –Ω–æ–≤—ã–µ —Å–ª–æ–≤–∞ –¥–ª—è –Ω–µ–π—Ä–æ—Å–µ—Ç–∏")  

@dp.message()
async def handle_text(message: Message):
    if not message.text:
        return

    text_lower = message.text.lower()

    # –ü—Ä–æ–≤–µ—Ä—è–µ–º "–ø—Ä" –≤ —Ç–µ–∫—Å—Ç–µ
    if "–ø—Ä" in text_lower:
        await message.answer("–ü—Ä–∏–≤–µ—Ç!")
        return  # –í–∞–∂–Ω–æ: return –ø–æ—Å–ª–µ –æ—Ç–≤–µ—Ç–∞

    # –ü—Ä–æ–≤–µ—Ä—è–µ–º "—á—Ç–æ –¥" –≤ —Ç–µ–∫—Å—Ç–µ
    if "—á—Ç–æ –¥" in text_lower:
        await message.answer("–†–∞–∑–≥–æ–≤–∞—Ä–∏–≤–∞—é —Å —Ç–æ–±–æ–π")
        return

    if "–∫–∞–∫ –¥" in text_lower:
      await message.answer("–ü—Ä–µ–∫—Ä–∞—Å–Ω–æ, –æ—Å–æ–±–µ–Ω–æ –∫–æ–≥–¥–∞ –µ—Å—Ç—å –ø–µ–ª—å–º–µ–Ω–∏")
      return

    if "–º–∞–∏–Ω" in text_lower:
      await message.answer("–≠—Ö –º–∞–∏–Ω–∫—Ä–∞—Ñ—Ç –ª–µ–≥–µ–Ω–¥–∞—Ä–Ω–∞—è –∏–≥—Ä–∞ –Ω–∞—à–∏—Ö –≤—Ä–µ–º–µ–Ω")
      return

    if "–ª–µ–≥–æ" in text_lower:
      await message.answer("–ü—Ä–∏–∫–æ–ª—å–Ω—ã–π –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç—Ä")
      return

    if "–∫—Ç–æ —Ç—ã" in text_lower:
          await message.answer("–Ø –ø—Ä–æ—Å—Ç–∞—è –Ω–µ–π—Ä–æ—Å–µ—Ç—å, —Å–æ–∑–¥–∞–Ω–Ω–∞—è 6 –¥–µ–∫–∞–±—Ä—è 2025 –≥–æ–¥–∞!")
          return

    if "—á—Ç–æ —Ç—ã —É–º" in text_lower:
          await message.answer("–Ø —É–º–µ—é –æ–±—â–∞—Ç—å—Å—è, –æ—Ç–≤–µ—á–∞—Ç—å –Ω–∞ –≤–æ–ø—Ä–æ—Å—ã –∏ –ø–æ–º–æ–≥–∞—Ç—å —Å –ø—Ä–æ—Å—Ç—ã–º–∏ –∑–∞–¥–∞—á–∞–º–∏!")
          return

    if "—Ç—ã –∂–∏–≤" in text_lower:
          await message.answer("–ù–µ—Ç, —è –∏—Å–∫—É—Å—Å—Ç–≤–µ–Ω–Ω—ã–π –∏–Ω—Ç–µ–ª–ª–µ–∫—Ç, –Ω–æ —Å—Ç–∞—Ä–∞—é—Å—å –±—ã—Ç—å –ø–æ–ª–µ–∑–Ω—ã–º!")
          return

    if "–≥–¥–µ —Ç—ã" in text_lower:
          await message.answer("–Ø –Ω–∞—Ö–æ–∂—É—Å—å –≤ —Ü–∏—Ñ—Ä–æ–≤–æ–º –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–µ!")
          return

    if "–ª–æ—Ö" in text_lower:
          await message.answer("–í –∑–µ—Ä–∫–∞–ª–æ –ø–æ—Å–º–æ—Ç—Ä–∏")
          return

    if "—Ç—ã –≥–µ–π" in text_lower:
          await message.answer("–ù–µ—Ç, —è –Ω–µ –≥–µ–π, —è –Ω–µ–π—Ä–æ—Å–µ—Ç—å!")
          return

    if "—Ç—ã –æ—Å—É–∂–¥–∞–µ—à—å –Ω" in text_lower:
          await message.answer("–ù–µ—Ç, —Å—Ç—Ä–∞–Ω—ã–µ —É —Ç–µ–±—è –≤–æ–ø—Ä–æ—Å—ãü§®")
          return

    if "–µ–≥–æ—Ä –Ω" in text_lower:
          await message.answer("–î–∞")
          return

    if "—Ñ–∏–Ω–∏–∫–∏" in text_lower:
          await message.answer("–∫—É—à–∞–π —Ñ–∏–Ω–∏–∫–∏")
          return

    # –ï—Å–ª–∏ –Ω–∏ –æ–¥–Ω–æ —É—Å–ª–æ–≤–∏–µ –Ω–µ —Å—Ä–∞–±–æ—Ç–∞–ª–æ
    await message.answer(f"–±—Ä–∞—Ç —è –Ω–µ –ø–æ–Ω—è–ª —á—Ç–æ —Ç—ã –Ω–∞–ø–∏—Å–∞–ª –ø–æ–ø—Ä–æ–±—É–π –Ω–∞–ø–∏—Å–∞—Ç—å —á—Ç–æ—Ç–æ –¥—Ä—É–≥–æ–µ –∏–ª–∏ –æ–±—Ä–∞—Ç–∏—Å—å –≤ –ø–æ–¥–¥–µ—Ä–∂–∫—É /help")

async def main():
    print("bot start")
    await dp.start_polling(bot)

if __name__ == '__main__':  
    asyncio.run(main())
